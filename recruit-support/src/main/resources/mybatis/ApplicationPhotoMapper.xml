<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yundingshuyuan.recruit.dao.ApplicationPhotoMapper">
    <!-- 添加方法的 SQL 映射 -->
    <select id="countApplicationPhoto" resultType="int">
        SELECT COUNT(*) FROM application_photo
    </select>

    <select id="hasApplicationPhoto" resultType="boolean">
        SELECT COUNT(*) FROM application_photo WHERE id = #{userId}
    </select>
</mapper>